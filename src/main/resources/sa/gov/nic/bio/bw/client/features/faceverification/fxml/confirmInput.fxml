<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane" stylesheets="@../css/style.css"
            fx:controller="sa.gov.nic.bio.bw.client.features.faceverification.ConfirmInputFxController">
    <center>
        <VBox fx:id="imagePane" spacing="10.0" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity">
            <HBox alignment="CENTER">
                <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" spacing="15.0">
                    <HBox alignment="CENTER" spacing="10">
                        <StackPane styleClass="image-border-confirm">
                            <ImageView fx:id="ivFinalImage" preserveRatio="true"/>
                        </StackPane>
                    </HBox>
                </VBox>
            </HBox>
            <HBox spacing="5.0" alignment="CENTER">
                <Label text="%label.personId"/>
                <Label fx:id="lblPersonId"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <Button fx:id="btnPrevious" text="%button.previous"/>
            <Button fx:id="btnMatch" text="%button.match"/>
        </HBox>
    </bottom>
</BorderPane>