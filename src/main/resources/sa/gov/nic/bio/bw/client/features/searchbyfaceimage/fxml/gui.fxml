<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ProgressIndicator?>
<?import org.controlsfx.control.NotificationPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import sa.gov.nic.bio.bw.client.features.searchbyfaceimage.ui.ToggleTitledPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>

<NotificationPane xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1"
                  fx:controller="sa.gov.nic.bio.bw.client.features.searchbyfaceimage.SearchByFaceImagePaneFxController"
                  fx:id="notificationPane" stylesheets="@../css/style.css">
    <content>
        <SplitPane fx:id="splitPane" orientation="VERTICAL" styleClass="white-background,hidden-divider">
            <HBox fx:id="imagePane" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity">
                <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" spacing="15.0">
                    <HBox alignment="CENTER" spacing="10">
                        <StackPane styleClass="image-border">
                            <ImageView fx:id="ivCenterImage" preserveRatio="true">
                                <Image url="@../images/avatar_placeholder.jpg"/>
                            </ImageView>
                        </StackPane>
                        <VBox fx:id="detailsPane" spacing="5" managed="false" visible="false">
                            <HBox spacing="5">
                                <Label text="%label.bioId" style="-fx-font-weight: bold"/>
                                <Label fx:id="lblBioId" text="%label.notAvailable"/>
                            </HBox>
                            <HBox spacing="5">
                                <Label text="%label.score" style="-fx-font-weight: bold"/>
                                <Label fx:id="lblScore" text="%label.notAvailable"/>
                            </HBox>
                            <HBox spacing="5">
                                <Label text="%label.samisId" style="-fx-font-weight: bold"/>
                                <Label fx:id="lblSamisId" text="%label.notAvailable"/>
                            </HBox>
                            <HBox spacing="5">
                                <Label text="%label.firstName" style="-fx-font-weight: bold"/>
                                <Label fx:id="lblFirstName" text="%label.notAvailable"/>
                            </HBox>
                            <HBox spacing="5">
                                <Label text="%label.fatherName" style="-fx-font-weight: bold"/>
                                <Label fx:id="lblFatherName" text="%label.notAvailable"/>
                            </HBox>
                            <HBox spacing="5">
                                <Label text="%label.familyName" style="-fx-font-weight: bold"/>
                                <Label fx:id="lblFamilyName" text="%label.notAvailable"/>
                            </HBox>
                        </VBox>
                    </HBox>
                    <HBox alignment="CENTER" spacing="10.0">
                        <Button fx:id="btnSelectImage" text="%button.selectImage" onAction="#onSelectImageButtonClicked"/>
                        <Button fx:id="btnSearchByImage" text="%button.searchByImage" onAction="#onSearchByImageButtonClicked" visible="false" managed="false"/>
                        <Button fx:id="btnCompareWithUploadedImage" text="%button.compareWithUploadedImage" onAction="#onCompareWithUploadedImageButtonClicked" visible="false" managed="false"/>
                        <ProgressIndicator fx:id="piSearchByImage" prefHeight="25.0" prefWidth="25.0" visible="false" managed="false"/>
                    </HBox>
                </VBox>
            </HBox>
            <ScrollPane fx:id="spCandidates" styleClass="slider" pannable="true" hbarPolicy="ALWAYS" vbarPolicy="NEVER" minHeight="100.0" managed="false" visible="false">
                <HBox fx:id="hbCandidatesContainer">
                    <ToggleTitledPane fx:id="tpUploadedImage" styleClass="slider-first-item" collapsible="false" text="%title.uploadedImage"/>
                    <HBox fx:id="hbCandidatesImages"/>
                </HBox>
            </ScrollPane>
        </SplitPane>
    </content>
</NotificationPane>