<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions"
             targetNamespace="http://activiti.org/bpmn20"
             xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:activiti="http://activiti.org/bpmn">

    <process id="menu.cancel.cancelCriminal" name="Cancel Criminal Process">

        <startEvent id="startEvent"/>

        <sequenceFlow sourceRef="startEvent" targetRef="dataEntry"/>

        <userTask id="dataEntry" activiti:formKey="sa.gov.nic.bio.bw.client.features.cancelcriminal.CancelCriminalPaneFxController">
            <extensionElements>
                <activiti:formProperty id="personId" type="string" required="true"/>
                <activiti:formProperty id="criminalId" type="string" required="true"/>
            </extensionElements>
        </userTask>

        <sequenceFlow sourceRef="dataEntry" targetRef="CancelCriminalService"/>

        <serviceTask id="CancelCriminalService" name="Calling Cancel Criminal API" activiti:class="sa.gov.nic.bio.bw.client.features.cancelcriminal.workflow.CancelCriminalService"/>

        <sequenceFlow sourceRef="CancelCriminalService" targetRef="dataEntry"/>

        <endEvent id="endEvent" />

    </process>

</definitions>