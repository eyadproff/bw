<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane" stylesheets="@../css/style.css"
            fx:controller="sa.gov.nic.bio.bw.client.features.searchbyfaceimage.ConfirmImageFxController">
    <center>
        <HBox fx:id="imagePane" alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity">
            <VBox alignment="CENTER" maxHeight="Infinity" maxWidth="Infinity" spacing="15.0">
                <HBox alignment="CENTER" spacing="10">
                    <StackPane styleClass="image-border-confirm">
                        <ImageView fx:id="ivFinalImage" preserveRatio="true"/>
                    </StackPane>
                </HBox>
            </VBox>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <Button fx:id="btnPrevious" text="%button.previous"/>
            <Button fx:id="btnSearch" text="%button.searchByImage"/>
        </HBox>
    </bottom>
</BorderPane>