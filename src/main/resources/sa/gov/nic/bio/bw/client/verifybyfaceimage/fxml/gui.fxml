<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ProgressIndicator?>
<?import org.controlsfx.control.NotificationPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<NotificationPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8"
                  fx:controller="sa.gov.nic.bio.bw.client.matchbyfaceimage.VerifyByFaceImagePaneFxController"
                  fx:id="notificationPane" stylesheets="@../css/verify_by_face_image.css">
    <content>
        <BorderPane>
            <center>
                <HBox>
                    <TitledPane text="%label.uploadedImage" collapsible="false">
                        <ImageView fx:id="ivUploadedImage">
                            <Image url="@../images/avatar_placeholder.jpg"/>
                        </ImageView>
                    </TitledPane>
                    <TitledPane text="%label.personImage" collapsible="false">
                        <ImageView fx:id="ivPersonImage">
                            <Image url="@../images/avatar_placeholder.jpg"/>
                        </ImageView>
                    </TitledPane>
                </HBox>
            </center>
            <bottom>
                <BorderPane>
                    <top>
                        <FlowPane>
                            <Label text="%label.personId"/>
                            <TextField fx:id="txtPersonId"/>
                            <Separator/>
                            <Button fx:id="btnUploadImage" text="%button.uploadImage"/>
                            <Button fx:id="btnGetPersonImageAndMatch" text="%button.getPersonImageAndMatch" visible="false" managed="false"/>
                            <ProgressIndicator fx:id="piGetPersonImageAndMatch" prefHeight="25.0" prefWidth="25.0" visible="false" managed="false"/>
                        </FlowPane>
                    </top>
                    <center>
                        <TextArea fx:id="txtPersonDetails"/>
                    </center>
                </BorderPane>
            </bottom>
        </BorderPane>
    </content>
</NotificationPane>