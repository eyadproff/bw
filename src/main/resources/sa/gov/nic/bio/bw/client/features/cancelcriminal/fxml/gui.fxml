<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ProgressIndicator?>

<VBox xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sa.gov.nic.bio.bw.client.features.cancelcriminal.CancelCriminalPaneFxController"
      stylesheets="@../css/style.css" alignment="CENTER" spacing="20">
    <HBox alignment="CENTER">
        <GridPane alignment="CENTER" vgap="5" hgap="20" styleClass="loginBox">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="%label.personId" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="txtPersonId" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#onEnterPressed"/>
            <Label text="%label.criminalId" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="txtCriminalId" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#onEnterPressed"/>
        </GridPane>
    </HBox>
    <VBox alignment="CENTER" spacing="10">
        <Button fx:id="btnCancelCriminal" text="%button.cancelCriminal" onAction="#onCancelCriminalButtonClicked"/>
        <ProgressIndicator fx:id="piCancelCriminal" prefHeight="25.0" prefWidth="25.0" visible="false" managed="false"/>
    </VBox>
</VBox>