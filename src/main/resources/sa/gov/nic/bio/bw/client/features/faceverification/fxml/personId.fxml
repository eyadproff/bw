<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane" stylesheets="@../css/style.css"
            fx:controller="sa.gov.nic.bio.bw.client.features.faceverification.controllers.PersonIdPaneFxController">
    <center>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER" spacing="5.0">
                <padding>
                    <Insets top="20.0"/>
                </padding>
                <GridPane alignment="CENTER" vgap="5" hgap="20" styleClass="formBox">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Label text="%label.personId" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <TextField fx:id="txtPersonId" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#onEnterPressed"/>
                </GridPane>
                <ProgressIndicator fx:id="piProgress" maxWidth="25.0" maxHeight="25.0" visible="false"/>
            </VBox>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <Button fx:id="btnNext" text="%button.next"/>
        </HBox>
    </bottom>
</BorderPane>