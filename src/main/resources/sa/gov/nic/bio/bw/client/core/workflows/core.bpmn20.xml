<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions"
             targetNamespace="http://activiti.org/bpmn20"
             xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:activiti="http://activiti.org/bpmn">

    <signal id="menuSelectionSignal" name="menuSelection"/>
    <signal id="logoutSignal" name="logout"/>

    <process id="coreProcess" name="Core Process">

        <startEvent id="startEvent"/>

        <sequenceFlow sourceRef="startEvent" targetRef="callLoginProcess"/>

        <callActivity id="callLoginProcess" name="Login Process" calledElement="loginProcess">
            <extensionElements>
                <activiti:out source="resultBean" target="resultBean"/>
            </extensionElements>
        </callActivity>

        <sequenceFlow sourceRef="callLoginProcess" targetRef="callHomeProcess"/>

        <callActivity id="callHomeProcess" name="Home Process" calledElement="homeProcess">
            <extensionElements>
                <activiti:in source="resultBean" target="resultBean"/>
            </extensionElements>
        </callActivity>

        <sequenceFlow sourceRef="callHomeProcess" targetRef="callXProcess"/>

        <callActivity id="callXProcess" name="X Process" calledElement="${menuId}"/>

        <boundaryEvent id="menuSelectionEventHome" attachedToRef="callHomeProcess">
            <signalEventDefinition signalRef="menuSelectionSignal"/>
        </boundaryEvent>

        <sequenceFlow sourceRef="menuSelectionEventHome" targetRef="callXProcess"/>

        <boundaryEvent id="logoutEventHome" attachedToRef="callHomeProcess">
            <signalEventDefinition signalRef="logoutSignal"/>
        </boundaryEvent>

        <sequenceFlow sourceRef="logoutEventHome" targetRef="logoutService"/>

        <boundaryEvent id="menuSelectionEventX" attachedToRef="callXProcess">
            <signalEventDefinition signalRef="menuSelectionSignal"/>
        </boundaryEvent>

        <sequenceFlow sourceRef="menuSelectionEventX" targetRef="callXProcess"/>

        <boundaryEvent id="logoutEventX" attachedToRef="callXProcess">
            <signalEventDefinition signalRef="logoutSignal"/>
        </boundaryEvent>

        <sequenceFlow sourceRef="logoutEventX" targetRef="logoutService"/>

        <serviceTask id="logoutService" name="Logout Service" activiti:class="sa.gov.nic.bio.bw.client.login.workflow.LogoutService"/>

        <sequenceFlow sourceRef="logoutService" targetRef="callLoginProcess"/>

        <endEvent id="endEvent"/>

    </process>

</definitions>