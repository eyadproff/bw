<?xml version="1.0" encoding="UTF-8"?>
<definitions id="definitions"
             targetNamespace="http://activiti.org/bpmn20"
             xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:activiti="http://activiti.org/bpmn">

    <process id="menu.query.searchByFaceImage" name="Search By Face Image Process">

        <startEvent id="startEvent"/>

        <sequenceFlow sourceRef="startEvent" targetRef="dataEntry"/>

        <userTask id="dataEntry" activiti:formKey="sa.gov.nic.bio.bw.client.features.searchbyfaceimage.SearchByFaceImagePaneFxController">
            <extensionElements>
                <activiti:formProperty id="uploadedImagePath" type="string" required="true"/>
            </extensionElements>
        </userTask>

        <sequenceFlow sourceRef="dataEntry" targetRef="searchByFaceImageService"/>

        <serviceTask id="searchByFaceImageService" name="Calling Search By Face Image API" activiti:class="sa.gov.nic.bio.bw.client.features.searchbyfaceimage.workflow.SearchByFaceImageService"/>

        <sequenceFlow sourceRef="searchByFaceImageService" targetRef="dataEntry"/>

        <endEvent id="endEvent" />

    </process>

</definitions>