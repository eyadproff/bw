<?xml version="1.0" encoding="UTF-8"?>
<?language JavaScript?>
<?scenebuilder-stylesheet ../css/core.css?>
<?scenebuilder-preview-i18n-resource ../bundles/labels.properties?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.stage.Stage?>
<?import javafx.scene.Scene?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ProgressIndicator?>
<?import org.controlsfx.control.NotificationPane?>
<?import javafx.scene.image.ImageView?>
<Stage xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8"
       fx:controller="sa.gov.nic.bio.bw.client.core.CoreFxController"
       fx:id="primaryStage" title="%window.title" height="600.0" width="800.0"
       onShown="#onStageShown">
    <icons>
        <Image url="@../images/app_icon.png"/>
    </icons>
    <scene>
        <Scene stylesheets="@../css/style.css">
            <StackPane id="mainPane">
                <BorderPane>
                    <top>
                        <fx:include fx:id="headerPane" source="header.fxml" styleClass="header" visible="false" managed="false"/>
                    </top>
                    <left>
                        <fx:include fx:id="menuPane" source="menu.fxml" styleClass="nav" visible="false" managed="false"/>
                    </left>
                    <center>
                        <NotificationPane fx:id="idleNotifier">
                            <graphic>
                                <ImageView>
                                    <Image url="@../images/warning.png"/>
                                </ImageView>
                            </graphic>
                            <content>
                                <StackPane fx:id="bodyPane">
                                    <!-- default place holder -->
                                    <ProgressIndicator maxHeight="25.0" maxWidth="25.0"/>
                                </StackPane>
                            </content>
                        </NotificationPane>
                    </center>
                    <bottom>
                        <fx:include fx:id="footerPane" source="footer.fxml" styleClass="footer"/>
                    </bottom>
                </BorderPane>
                <StackPane fx:id="overlayPane" styleClass="background-overlay" visible="false"/>
            </StackPane>
        </Scene>
    </scene>
</Stage>

<!-- NOTE:
    We need the IDs rootPane and rootPane in order to be
    able to inject headerPaneController and footerPaneController
-->