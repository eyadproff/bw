<?xml version="1.0" encoding="UTF-8"?>
<?language JavaScript?>
<?scenebuilder-preview-i18n-resource ../bundles/labels.properties?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import sa.gov.nic.bio.bw.client.core.ui.AutoScalingStackPane?>
<BorderPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8"
            fx:id="rootPane" fx:controller="sa.gov.nic.bio.bw.client.features.mofaenrollment.FaceCapturingFxController"
            stylesheets="@../css/style.css">
    <center>
        <SplitPane styleClass="white-background" orientation="VERTICAL" dividerPositions="0.5,0.5" VBox.vgrow="ALWAYS">
            <padding>
                <Insets top="10.0" bottom="10.0"/>
            </padding>
            <SplitPane dividerPositions="0.5,0.5">
                <TitledPane text="%label.cameraControlPanel" maxHeight="Infinity" collapsible="false" HBox.hgrow="ALWAYS">
                </TitledPane>
                <TitledPane text="%label.cameraLivePreview" maxHeight="Infinity" collapsible="false" HBox.hgrow="ALWAYS">

                </TitledPane>
            </SplitPane>
            <SplitPane dividerPositions="0.5,0.5">
                <TitledPane text="%label.icaoStandardChecklist" maxHeight="Infinity" collapsible="false" HBox.hgrow="ALWAYS">
                    <GridPane>
                        <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
                            <padding>
                                <Insets topRightBottomLeft="10"/>
                            </padding>
                            <TitledPane text="%label.checklistResult" maxHeight="Infinity" collapsible="false" VBox.vgrow="ALWAYS">
                            </TitledPane>
                        </VBox>
                        <AutoScalingStackPane fx:id="subScenePane" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"/>
                    </GridPane>
                </TitledPane>
                <TitledPane text="%label.finalCapturedImage" maxHeight="Infinity" collapsible="false" HBox.hgrow="ALWAYS">
                </TitledPane>
            </SplitPane>
        </SplitPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <Button fx:id="btnPrevious" text="%button.previous"/>
            <Button fx:id="btnNext" text="%button.next"/>
        </HBox>
    </bottom>
</BorderPane>