<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.controlsfx.glyphfont.Glyph?>
<?import sa.gov.nic.bio.bw.workflow.commons.ui.PTableColumn?>
<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sa.gov.nic.bio.bw.workflow.criminaltransactions.controllers.CriminalTransactionsPaneFxController"
            fx:id="rootPane" stylesheets="@../css/style.css">
    <center>
        <VBox>
            <HBox spacing="5.0">
                <padding>
                    <Insets topRightBottomLeft="10.0"/>
                </padding>
                <Label text="%label.criminalBiometricsId"/>
                <TextField fx:id="txtCriminalBiometricsId" onAction="#onInquiryButtonClicked"/>
                <Button fx:id="btnInquiry" text="%button.inquiry" onAction="#onInquiryButtonClicked"/>
            </HBox>
            <TitledPane fx:id="tpSearchResults" text="%label.searchResults" collapsible="false" maxHeight="Infinity" VBox.vgrow="ALWAYS" focusTraversable="false">
                <StackPane>
                    <VBox alignment="BOTTOM_LEFT">
                        <Label text="%label.orderTip">
                            <graphic>
                                <Glyph fontFamily="FontAwesome" icon="slack"/>
                            </graphic>
                        </Label>
                    </VBox>
                    <VBox fx:id="paneTable">
                        <TableView fx:id="tvCriminalTransactions" prefHeight="250.0" maxHeight="Infinity" VBox.vgrow="ALWAYS">
                            <placeholder>
                                <StackPane>
                                    <Label fx:id="lblCriminalTransactionsPlaceHolder" text="%table.placeholder"/>
                                    <ProgressIndicator fx:id="piCriminalTransactionsPlaceHolder" maxHeight="25.0" maxWidth="25.0" visible="false"/>
                                </StackPane>
                            </placeholder>
                            <columns>
                                <PTableColumn fx:id="tcSequence" text="#" percentageWidth="0.03"/>
                                <PTableColumn fx:id="tcTransactionType" text="%table.column.transactionType" percentageWidth="0.15"/>
                                <PTableColumn fx:id="tcTransactionId" text="%table.column.transactionId" percentageWidth="0.13"/>
                                <PTableColumn fx:id="tcDateAndTime" text="%table.column.dateAndTime" percentageWidth="0.3"/>
                                <PTableColumn fx:id="tcOperatorId" text="%table.column.operatorId" percentageWidth="0.12"/>
                                <PTableColumn fx:id="tcLocation" text="%table.column.location" percentageWidth="0.05"/>
                                <PTableColumn fx:id="tcConvictedReportId" text="%table.column.convictedReportId" percentageWidth="0.13"/>
                                <PTableColumn fx:id="tcResult" text="%table.column.result" percentageWidth="0.05"/>
                            </columns>
                        </TableView>
                    </VBox>
                </StackPane>
            </TitledPane>
        </VBox>
    </center>
</BorderPane>