                        <VBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label fx:id="PersonName" prefHeight="18.0" prefWidth="146.0">
                                    <font>
                                        <Font size="12.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="PersonID" prefHeight="18.0" prefWidth="138.0">
                                    <font>
                                        <Font size="12.0"/>
