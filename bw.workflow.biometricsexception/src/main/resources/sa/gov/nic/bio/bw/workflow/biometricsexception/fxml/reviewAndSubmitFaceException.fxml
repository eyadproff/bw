            fx:controller="sa.gov.nic.bio.bw.workflow.biometricsexception.controllers.ReviewAndSubmitFaceExceptionFXController">
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <Button fx:id="btnPrevious" onAction="#onPreviousButtonClicked" text="%button.previous"/>
            <Button fx:id="btnNext" onAction="#onNextButtonClicked" text="%button.submit"/>

        </HBox>
    </bottom>
    <center>
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="252.0" prefWidth="347.0"
              style="-fx-border-color: gray;" BorderPane.alignment="CENTER">
            <children>
                <Label prefHeight="37.0" prefWidth="350.0" style="-fx-background-color: LightGray;"
                       text="%Label.PersonInfo">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <HBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="98.0" prefWidth="345.0">
                    <children>
                        <VBox alignment="CENTER_LEFT" prefHeight="97.0" prefWidth="136.0" spacing="20.0">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="130.0" text="%label.Name">
                                    <font>
                                        <Font name="System Bold" size="13.0"/>
                                    </font>
                                </Label>
                                <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="130.0"
                                       text="%label.personId">
                                    <font>
                                        <Font name="System Bold" size="13.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label fx:id="PersonName" prefHeight="18.0" prefWidth="183.0">
                                    <font>
                                        <Font size="13.0"/>
                                    </font>
                                </Label>
                                <Label fx:id="PersonID" prefHeight="18.0" prefWidth="179.0">
                                    <font>
                                        <Font size="13.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label layoutX="10.0" layoutY="10.0" prefHeight="37.0" prefWidth="350.0"
                       style="-fx-background-color: LightGray;" text="%Label.FaceExcReason">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <font>
                        <Font name="System Bold" size="14.0"/>
                    </font>
                </Label>
                <HBox layoutX="31.0" layoutY="47.0" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="78.0"
                      prefWidth="345.0">
                    <children>
                        <VBox alignment="CENTER_LEFT" prefHeight="77.0" prefWidth="136.0" spacing="20.0">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="130.0" text="%CauseText">
                                    <font>
                                        <Font name="System Bold" size="13.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <Label fx:id="LblfaceExcReason" prefHeight="18.0" prefWidth="183.0">
                                    <font>
                                        <Font size="13.0"/>
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
