                    <children>
                        <VBox alignment="CENTER_LEFT" prefHeight="304.0" prefWidth="147.0" spacing="20.0">
                            <children>
                                <Label alignment="CENTER_RIGHT" prefHeight="18.0" prefWidth="117.0" text="%label.Name">
                                    <font>
                                        <Font name="System Bold" size="13.0"/>
                                    </font>
                                </Label>
