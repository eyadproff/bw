<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns="http://javafx.com/javafx/8.0.152" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="sa.gov.nic.bio.bw.home.controllers.HomePaneFxController"
           stylesheets="@../css/style.css">
    <VBox alignment="CENTER">
        <HBox alignment="CENTER">
            <padding>
                <Insets topRightBottomLeft="10.0"/>
            </padding>
            <Label fx:id="lblPlaceholder" text="%label.loading"/>
            <GridPane fx:id="paneLoginBox" alignment="CENTER" hgap="20.0" styleClass="formBox" managed="false"
                      visible="false">
                <padding>
                    <Insets topRightBottomLeft="20.0"/>
                </padding>
                <Label fx:id="lblLoginTimeText" text="%label.loginTime" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Label fx:id="lblLoginTime" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="lblLastSuccessLoginText" text="%label.lastSuccessLogin" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                    <padding>
                        <Insets top="5"/>
                    </padding>
                </Label>
                <Label fx:id="lblLastSuccessLogin" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <padding>
                        <Insets top="5"/>
                    </padding>
                </Label>
                <Label fx:id="lblLastFailedLoginText" text="%label.lastFailedLogin" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <padding>
                        <Insets top="5"/>
                    </padding>
                </Label>
                <Label fx:id="lblLastFailedLogin" GridPane.columnIndex="1" GridPane.rowIndex="2">
                    <padding>
                        <Insets top="5"/>
                    </padding>
                </Label>
                <Label fx:id="lblFailedLoginCountText" text="%label.failedLoginCount" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="3">
                    <padding>
                        <Insets top="5"/>
                    </padding>
                </Label>
                <Label fx:id="lblFailedLoginCount" GridPane.columnIndex="1" GridPane.rowIndex="3">
                    <padding>
                        <Insets top="5"/>
                    </padding>
                </Label>
                <Label fx:id="lblLastPasswordChangeTimeText" text="%label.lastPasswordChangeTime" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="4">
                    <padding>
                        <Insets top="5"/>
                    </padding>
                </Label>
                <Label fx:id="lblLastPasswordChangeTime" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <padding>
                        <Insets top="5"/>
                    </padding>
                </Label>
                <Label fx:id="lblPasswordExpirationTimeText" text="%label.passwordExpirationTime" style="-fx-font-weight: bold;" GridPane.columnIndex="0" GridPane.rowIndex="5">
                    <padding>
                        <Insets top="5"/>
                    </padding>
                </Label>
                <Label fx:id="lblPasswordExpirationTime" GridPane.columnIndex="1" GridPane.rowIndex="5">
                    <padding>
                        <Insets top="5"/>
                    </padding>
                </Label>
            </GridPane>
        </HBox>
    </VBox>
</StackPane>
