<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1"
            fx:id="rootPane" stylesheets="@../../../../../../../../../../../../bw.workflow.registerconvictedpresent/src/main/resources/sa/gov/nic/bio/bw/workflow/registerconvictedpresent/css/style.css"
            fx:controller="sa.gov.nic.bio.bw.workflow.registerconvictednotpresent.controllers.UploadNistFileFxController">
    <center>
        <HBox alignment="CENTER">
            <VBox alignment="CENTER" spacing="10.0">
                <Button fx:id="btnSelectFile" text="%button.selectFile" onAction="#onSelectFileButtonClicked"/>
                <HBox fx:id="paneFilePath" spacing="5.0" visible="false">
                    <VBox alignment="CENTER_LEFT">
                        <Label text="%label.filePath"/>
                    </VBox>
                    <TextField fx:id="txtFilePath" editable="false" nodeOrientation="LEFT_TO_RIGHT" prefWidth="350.0"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="10"/>
            </padding>
            <Button fx:id="btnPrevious" text="%button.previous" onAction="#onPreviousButtonClicked"/>
            <Button fx:id="btnNext" text="%button.next" disable="true" onAction="#onNextButtonClicked"/>
        </HBox>
    </bottom>
</BorderPane>